{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/scheduler",
  "projects": {
    "scheduler": {
      "type": "application",
      "root": "apps/scheduler",
      "entryFile": "main",
      "sourceRoot": "apps/scheduler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/scheduler/tsconfig.app.json",
        "watchAssets": true
      }
    },
    "telegram-notifier": {
      "type": "application",
      "root": "apps/telegram-notifier",
      "entryFile": "main",
      "sourceRoot": "apps/telegram-notifier/src",
      "compilerOptions": {
        "tsConfigPath": "apps/telegram-notifier/tsconfig.app.json",
        "watchAssets": true
      }
    },
    "crawler": {
      "type": "application",
      "root": "apps/crawler",
      "entryFile": "main",
      "sourceRoot": "apps/crawler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/crawler/tsconfig.app.json",
        "watchAssets": true
      }
    }
  }
}
